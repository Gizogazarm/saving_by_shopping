<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hijau_transparant">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="12dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/backround_latar"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_imglist"
                android:layout_width="89dp"
                android:layout_height="89dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="19dp"
                app:cardBackgroundColor="@color/tab_active"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/hijau_gelap"
                app:strokeWidth="3dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_viewItemList"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:contentDescription="@string/img_itemlist"
                        android:src="@drawable/baseline_image_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>
            <!-- BAGIAN AKHIR GAMBAR IMG LIST-->

            <TextView
                android:id="@+id/tv_titleItemList"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/source_serif_4_semibold"
                android:maxLines="1"
                android:text="@string/title_itemList"
                android:textAlignment="textStart"
                android:textColor="@color/hijau_gelap"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@id/card_imglist"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_quantityItemList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:fontFamily="@font/source_serif_4_semibold"
                android:text="@string/jumlahQty"
                android:textColor="@color/tv_transparant"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@id/card_imglist"
                app:layout_constraintTop_toBottomOf="@id/tv_titleItemList" />

            <!--BAGIAN AKHIR DARI TV_NAMA ITEM DAN -->


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_minQtyItem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/rounded_corner_button"
                android:contentDescription="@string/button_Check"
                android:scaleType="centerInside"
                android:src="@drawable/min_icon"
                app:layout_constraintStart_toEndOf="@id/card_imglist"
                app:layout_constraintTop_toBottomOf="@id/tv_quantityItemList"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_edQtyItemList"
                style="@style/EditText.fillItem"
                android:layout_width="37dp"
                android:layout_height="26dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="27dp"
                app:hintEnabled="false"
                app:layout_constraintStart_toEndOf="@+id/btn_minQtyItem"
                app:layout_constraintTop_toBottomOf="@id/tv_quantityItemList">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_QtyItemList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:hint="@string/qty"
                    android:inputType="number"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:textAlignment="textStart"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_addQtyItem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/rounded_corner_button"
                android:contentDescription="@string/button_Check"
                android:scaleType="centerInside"
                android:src="@drawable/plus_icon"
                app:layout_constraintStart_toEndOf="@id/layout_edQtyItemList"
                app:layout_constraintTop_toBottomOf="@id/tv_quantityItemList"
                tools:ignore="DuplicateSpeakableTextCheck" />


            <!--BUAT BAGIAN BUTTON QTY PLUS OR MINUS-->

            <ImageView
                android:id="@+id/btn_deleteItemShop"
                android:layout_width="21dp"
                android:layout_height="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="13dp"
                android:foregroundGravity="center"
                android:src="@drawable/trash_icon"
                app:layout_constraintTop_toTopOf="parent" />



            <!--BAGIAN AKHIR BUTTON DELETE ITEMSHOP-->

            <TextView
                android:id="@+id/tv_statusItemList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/dm_sans"
                android:text="@string/kosong"
                android:textAlignment="textEnd"
                android:textColor="@color/hijau_gelap"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_deleteItemShop" />

            <TextView
                android:id="@+id/tv_amounTotalShopItemList"
                android:layout_width="135dp"
                android:layout_height="18dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/dm_sans_bold"
                android:maxLines="1"
                android:text="@string/kosong"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_statusItemList" />

            <TextView
                android:id="@+id/tv_totalSavingItemList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/dm_sans"
                android:text="@string/kosong"
                android:textAlignment="textEnd"
                android:textColor="@color/hijau_gelap"
                android:textSize="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_amounTotalShopItemList" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>


    



